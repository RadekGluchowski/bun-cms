    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "jose": "^6.1.3",
    "pino": "^10.3.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "drizzle-kit": "^0.31.8",
    "pino-pretty": "^13.1.3"
